<div class="margin">
<h1>Books</h1>
<div class="table">
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    
    
 <% @books.each do |book| %>
<tbody>
    <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  
  <td class="botton"><%= link_to"Show","/books/#{book.id}" %></td>
  <td class="botton"><%= link_to"Edit","/books/#{book.id}/edit" %></td>
  <td class="botton"><%= link_to"Destroy","/books/#{book.id}", method: :delete, "data-confirm"=>"Are you sure?" %></td>
 
<% end %>
</tr>
</tbody>
</table>
</div>
<h2>New book</h2>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="block">
<%= form_with model: @book, url: '/books', method: :post do |f| %>
   <div class="title">
   <p>Title</p>
   <%= f.text_field :title %>
   </div>
   
   <div class="body">
   <p>Body</p>
   <%= f.text_area :body %>
   </div>
   <%= f.submit 'Create Book' %>
<% end %>
</div>
</div>